extends layout

block content
    .container
        h1 Register Page
        p.lead Say something worthwhile here.
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Enter Username')
            .form-group
                input.form-control(type='password', name="password", placeholder='Password')
            .form-group
                input.form-control(type='text', name="birth", placeholder='Date of Birth')
            .form-group
                input.form-control(type='text', name="gender", placeholder='Gender')
            .form-group
                input.form-control(type='text', name="email", placeholder='Email')
            .form-group
                input.form-control(type='text', name="phone", placeholder='Phone')
            button.btn.btn-default(type='submit') Submit
        &nbsp;
    a(href='/')
        button.btn.btn-primary(type="button") Cancel
